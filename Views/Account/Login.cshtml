
@using BookStoreVer4.Models.Clients

@model BookStoreVer4.ModelView.LoginModel

@{
    ViewData["Title"] = "Проверка пользователя";
}


<form asp-action="Login" asp-controller="Account">

    <h1 class="h3 mb-3 fw-normal">Пожалуйста войдите в свою учетную запись</h1>

    <div class="form-floating">
        <input asp-for="@Model.email " type="email" class="form-control w-25" id="floatingInput" placeholder="name@example.com">
        
    </div>
    <div class="form-floating mt-2">
        <input asp-for="@Model.password " type="password" class="form-control w-25" id="floatingPassword" placeholder="Password">
        
    </div>

    <button class=" mt-3 btn btn-lg btn-primary" type="submit">Sign in</button>

</form>

<div class="container mt-3">
    <a asp-action="Register" asp-controller="Account">Зарегистрироваться</a>
</div>


